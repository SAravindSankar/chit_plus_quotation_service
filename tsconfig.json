{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "Server.ts"],
  "exclude": ["node_modules", "dist"]
}
